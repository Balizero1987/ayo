{
  "dashboard": {
    "title": "Nuzantara Error Tracking Dashboard",
    "tags": ["errors", "exceptions", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Error Rate (4xx vs 5xx)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(zantara_http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Client Errors"
          },
          {
            "expr": "rate(zantara_http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Server Errors"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(zantara_http_requests_total{status=~\"[45]..\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Top Error Endpoints (Last 5m)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint, status) (rate(zantara_http_requests_total{status=~\"[45]..\"}[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Percentage",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(zantara_http_requests_total{status=~\"[45]..\"}[5m])) / sum(rate(zantara_http_requests_total[5m])) * 100",
            "legendFormat": "Error %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Request Duration for Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(zantara_request_duration_seconds_bucket{status=~\"[45]..\"}[5m])))",
            "legendFormat": "P95 - {{endpoint}}"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Error Rate Trend (Last Hour)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(zantara_http_requests_total{status=~\"[45]..\"}[5m]))",
            "legendFormat": "Total Error Rate"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}

