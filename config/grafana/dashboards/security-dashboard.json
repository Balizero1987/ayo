{
  "dashboard": {
    "title": "Nuzantara Security Dashboard",
    "tags": ["security", "audit", "authentication"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Failed Login Attempts",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_failed_logins_total[5m])",
            "legendFormat": "{{email}} - {{reason}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Failed Logins/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Successful vs Failed Logins",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_successful_logins_total[5m])",
            "legendFormat": "Successful"
          },
          {
            "expr": "rate(security_failed_logins_total[5m])",
            "legendFormat": "Failed"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Logins/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "API Key Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_api_key_violations_total[5m])",
            "legendFormat": "{{endpoint}} - {{reason}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Violations/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Rate Limit Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_rate_limit_violations_total[5m])",
            "legendFormat": "{{endpoint}} - {{ip_address}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Violations/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Permission Denied Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_permission_denied_total[5m])",
            "legendFormat": "{{endpoint}} - {{required_permission}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Denials/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "security_active_sessions_total",
            "legendFormat": "Active Sessions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Suspicious Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_suspicious_activity_total[5m])",
            "legendFormat": "{{activity_type}} - {{severity}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Audit Events by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(security_audit_events_total[5m])",
            "legendFormat": "{{action}} - {{resource_type}} - {{success}}"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Failed Login Attempts by IP",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, security_failed_attempts_by_ip)",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Session Duration Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(security_session_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(security_session_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ]
  }
}

